<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/appwidget_bg_holo" >

    <LinearLayout
        android:id="@+id/btn_dim_block"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingTop="12dp"
        android:background="@drawable/appwidget_button_center"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_dim_block"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:scaleType="center"
            android:contentDescription="@null"
            />

        <ImageView
            android:id="@+id/ind_dim_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="@drawable/appwidget_settings_divider_holo"
        android:contentDescription="@null"
        />

    <LinearLayout
        android:id="@+id/btn_settings"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/appwidget_button_center"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_settings"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:scaleType="center"
            android:contentDescription="@null"
            />

        <ImageView
            android:id="@+id/ind_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            />
    </LinearLayout>

</LinearLayout>
