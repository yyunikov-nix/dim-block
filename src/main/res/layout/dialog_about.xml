<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/layout_padding"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_about_app_icon"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/app_name"
        android:id="@+id/tv_about_app_name"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/view_padding"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/about_version"
        android:id="@+id/tv_about_version"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:padding="@dimen/view_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/about_author"
        android:id="@+id/tv_about_author"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/view_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/about_icon_author"
        android:id="@+id/tv_about_icon_author"
        android:layout_gravity="center"
        android:padding="@dimen/view_padding"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_ok"
        android:id="@+id/about_button_ok"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/view_padding"
        android:minWidth="@dimen/button_min_width"/>

</LinearLayout>